SWITCH($period1,"lytd",GROUP(DATEVALUE(DATERANGE(DATE_STARTOF(TODAY(),"1",-1),TODAY()),"yyyy MM")),"ytd",GROUP(DATEVALUE(DATERANGE(DATE_STARTOF(TODAY(),"1"),TODAY()),"yyyy MM")),"this_month",DATEVALUE(DATERANGE(DATE_STARTOF(TODAY(),"3"),TODAY()),"yyyy MM dd"),"last_month",DATEVALUE(DATERANGE(DATE_STARTOF(TODAY(),"3",-1),DATE_ENDOF(TODAY(),"3",-1)),"yyyy MM dd"),"last_7d",DATEVALUE(DATERANGE(DATE_ADD(TODAY(),"5",-7),YESTERDAY()),"yyyy MM dd"),"last_30d",DATEVALUE(DATERANGE(DATE_ADD(TODAY(),"5",-30),YESTERDAY()),"yyyy MM dd"))
